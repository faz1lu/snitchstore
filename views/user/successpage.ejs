<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">


<section class="h-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-10 col-xl-8">
        <div class="card" style="border-radius: 10px;">
          <div class="card-header px-4 py-5">
            <h5 class="text-muted mb-0" style="color: #1a044e;">Thanks for your Order  <i class="fa-solid fa-person-walking-luggage" style="color: darkblue;"></i> <span style="color:rgb(17, 17, 190)"></span>!</h5>
          </div>

          <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
              <p class="lead fw-normal mb-0" style="color: #1a044e;">Receipt</p>
              <p class="small text-muted mb-0">Receipt Voucher : 1KAU9-84UIL</p>
            </div>
            <div class="card shadow-0 border mb-4">
            <% for( let i = 0; i < orderlisting.length; i++ ) { %>

            <% for( let j = 0; j < orderlisting[i].products.length; j++ ) { %>
              <div class="card-body">
                <div class="row">
                  <div class="col-md-2">
                    <img src="<%=orderlisting[i].products[j].product.image[0]%>" class="img-fluid" alt="Phone">
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0"><%=orderlisting[i].products[j].product.name%> </p>
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0 small">color:<%=orderlisting[i].products[j].product.selectcolor%></p>
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0 small">size:<%=orderlisting[i].products[j].product.size%></p>
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0 small">Qty:<%=orderlisting[i].products[j].quantity%></p>
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0 small"><%=orderlisting[i].products[j].totalprice%></p>
                  </div>
                </div>
                <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">
                <div class="row d-flex align-items-center">
                 
                
                </div>
              </div>
                <% } %>
                <% } %>

            </div>
           

            <div class="d-flex justify-content-between pt-2">
              <p class="fw-bold mb-0">ship to :</p>
              <p class="text-muted mb-0"><span class="fw-bold me-4">Total</span> $898.00</p>
            </div>

            <div class="d-flex justify-content-between pt-2">
              <p class="text-muted mb-0">name: shibili ad </p>
              <p class="text-muted mb-0"><span class="fw-bold me-4">Discount</span> $</p>
            </div>

            <div class="d-flex justify-content-between">
              <p class="text-muted mb-0">address: machingal house</p>
              <p class="text-muted mb-0"><span class="fw-bold me-4">GST 18%</span> 123</p>
            </div>

            <div class="d-flex justify-content-between mb-5">
              <p class="text-muted mb-0">wayanad,kerala,673123</p>
              <p class="text-muted mb-0"><span class="fw-bold me-4">Delivery Charges</span> Free</p>
            </div>
          </div>
          <div class="card-footer border-0 px-4 py-5" style="background-color: #ffffff; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
            <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">Total
              paid: <span class="h2 mb-0 ms-2">$1040</span></h5>
              <div style="color: rgb(2, 2, 82); text-decoration: none;"><h4><a href="/shop">Continue shoping</a> </h4></div>
         
            </div>

        </div>
      </div>
    </div>
  </div>
</section>
<style>
  .gradient-custom {
    /* fallback for old browsers */
    background: #40076b;

    /* Chrome 10-25, Safari 5.1-6 */
    background: -webkit-linear-gradient(to top left, rgb(220, 216, 220), rgb(224, 221, 227));

    /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
    background: linear-gradient(to top left, rgb(255, 255, 255), rgb(247, 247, 251))
  }
</style>